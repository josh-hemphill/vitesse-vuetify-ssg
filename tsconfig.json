{
	"ts-node": {
		"esm": true,
	},
	"compilerOptions": {
		"baseUrl": ".",
		"module": "esnext",
		"target": "ESNext",
		"lib": [
			"DOM",
			"ESNext"
		],
		"outDir": "no-op",
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"incremental": false,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"vite-ssg",
			"vitest",
			"cypress",
			"vite/client",
			"vite-plugin-pages/client",
			"vite-plugin-vue-layouts/client",
			"@intlify/unplugin-vue-i18n/messages"
		],
		"paths": {
			"~/*": [
				"src/*"
			],
			"~~/*": [
				"src/*"
			],
			"S_CONFIG/*": [
				"shared-config/*"
			],
			"./*": [
				"./*"
			]
		}
	},
	"exclude": [
		"dist",
		"node_modules"
	]
}
